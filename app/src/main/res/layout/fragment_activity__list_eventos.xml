<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#fff"
    tools:context=".activity_ListEventos">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="40dp"
            tools:srcCompat="@drawable/icono" />
        //EVENTO 1
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/listevent"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="70dp"
                android:layout_height="125dp"
                android:layout_marginRight="10dp"
                tools:srcCompat="@drawable/user1" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Argenis Uceda"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textColor="#000" />

                    <ImageButton
                        android:gravity="end"
                        android:id="@+id/imageButton"
                        android:layout_width="27dp"
                        android:background="#fff"
                        android:layout_marginVertical="3dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_eye1" />
                </LinearLayout>
                //PARTIDA

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textpartida1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punto de Partida:" />

                    <TextView
                        android:id="@+id/Numpartida1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Av.Pachacuted" />
                </LinearLayout>

                //FINALIZACION

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtfin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punto de finalización:" />

                    <TextView
                        android:id="@+id/Numfin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Tottus" />

                </LinearLayout>
                //HORA

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtHI1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora de inicio:" />

                    <TextView
                        android:id="@+id/HI1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="11:00 am" />

                </LinearLayout>
                //TIPO DE EJERCICIO

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTE1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de ejercio:" />

                    <TextView
                        android:id="@+id/TE1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Trote maratonica" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        //EVENTO 2
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/listevent"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="70dp"
                android:layout_height="125dp"
                android:layout_marginRight="10dp"
                tools:srcCompat="@drawable/user2" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Bruno Roman"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textColor="#000" />

                    <ImageButton
                        android:gravity="end"
                        android:id="@+id/imageButton2"
                        android:layout_width="27dp"
                        android:background="#fff"
                        android:layout_marginVertical="3dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_eye1" />
                </LinearLayout>
                //PARTIDA

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textpartida2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punto de Partida:" />

                    <TextView
                        android:id="@+id/Numpartida2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Av.Pachacuted" />
                </LinearLayout>

                //FINALIZACION

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtfin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punto de finalización:" />

                    <TextView
                        android:id="@+id/Numfin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Tottus" />

                </LinearLayout>
                //HORA

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtHI2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora de inicio:" />

                    <TextView
                        android:id="@+id/HI2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="11:00 am" />

                </LinearLayout>
                //TIPO DE EJERCICIO

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTE2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de ejercio:" />

                    <TextView
                        android:id="@+id/TE2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Manejo de bibicleta" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>